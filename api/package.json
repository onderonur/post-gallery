{
  "name": "api",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/introspection": "^1.12.2",
    "@graphql-codegen/typescript": "^1.12.2",
    "@graphql-codegen/typescript-resolvers": "^1.12.2",
    "@types/connect-pg-simple": "^4.2.0",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.17.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^8.0.3",
    "@types/helmet": "0.0.45",
    "@types/lodash": "^4.14.149",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.7.4",
    "@types/object-hash": "^1.3.1",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/sharp": "^0.24.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "apollo-datasource": "^0.7.0",
    "apollo-server-express": "^2.10.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.11.0",
    "connect-pg-simple": "^6.1.0",
    "csurf": "^1.11.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "graphql": "^14.6.0",
    "helmet": "^3.21.2",
    "nanoid": "^2.1.10",
    "object-hash": "^2.0.3",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.10",
    "sharp": "^0.24.1",
    "typeorm": "0.2.22"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --inspect -- src/index.ts",
    "start": "cross-env NODE_ENV=development ts-node src/index.ts",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.production.json",
    "preprod": "npm run build",
    "prod": "cross-env NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "typeorm": "cross-env NODE_ENV=development ts-node ./node_modules/typeorm/cli.js",
    "gql-gen": "graphql-codegen --config codegen.yml",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:fix": "eslint --fix --max-warnings 0 --ext .js,.jsx,.ts,.tsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix"
    ]
  }
}
